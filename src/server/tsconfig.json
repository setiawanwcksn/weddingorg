{
  "compilerOptions": {
    "rootDir": "../",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "../shared/*"
      ]
    },
    "types": [
      "node"
    ],
    "lib": [
      "es2022"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "../shared/**/*.ts",
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "types": [
    "node"
  ]
}